<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    tools:context="com.kludge.wakemeup.MainAlarm">

    <Button android:id="@+id/add_alarm"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/button_add" />

    <EditText android:id="@+id/alarm_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/empty_alarm_field" />

    <ListView android:id="@+id/list_alarms"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/add_alarm"/>

</RelativeLayout>

