<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:longClickable="true">

    <TextView android:id="@+id/view_alarm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="@string/alarm_name"/>

    <TextView android:id="@+id/view_alarm_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/view_alarm_name"
        android:text="25:00" />

    <Switch android:id="@+id/view_alarm_on_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socialize!"
        android:id="@+id/socializeButton"
        android:layout_alignBottom="@+id/view_alarm_time"
        android:layout_toLeftOf="@+id/view_alarm_on_state"
        android:layout_toStartOf="@+id/view_alarm_on_state"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"/>

</RelativeLayout>